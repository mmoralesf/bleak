<div id="menu" data-target="menu">
	<div class="menu-header">
		<span class="menu-label">Men√∫</span>
		<a class="menu-close" data-action="menu" data-target="menu"></a>
	</div>
	<ul class="menu-list">
		{{#foreach navigation}}
		<li class="menu-list-item">
			<a class="{{slug}}{{#if current}} current{{/if}}" href="{{url absolute="true"}}">{{label}}</a>
		</li>
		{{/foreach}}
		<li class="menu-list-item menu-list-item-follow">
			{{#if @blog.twitter}}
			<a class="twitter" href="{{twitter_url}}" title="{{@blog.twitter}}"><i class="icon-twitter"></i></a>
			{{/if}}
			{{@blog.facebook}}
			<a class="Medium" href="https://medium.com/@MarianoMorales" title="Medium Publications"><i class="icon-medium"></i></a>
			<a class="rss" href="{{@blog.url}}/rss/"><i class="icon-rss"></i></a>
		</li>
	</ul>
</div>
<div class="overlay"></div>